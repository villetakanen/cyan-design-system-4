---
import { getCollection, render } from 'astro:content';
import CollectionTraySection from '@components/base/CollectionTraySection.astro';
import Page from '@layouts/Page.astro';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const posts = await getCollection('application');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { post } = Astro.props;
const { Content } = await render(post);
---
<Page title={post.data.title} tray>
  <div class={post.data.containerClass}>
    <Content />
  </div>
  <CollectionTraySection slot="tray" collection="application"/>
  {post.data.poster && (
    <div id="cn-background-poster" class="sm-hidden">
      <picture>
      { post.data.poster_md && <source media="(min-width:960px)" srcset={post.data.poster_md} /> }
    { /* sm && <source media="(min-width:620px)" srcset={sm} /> // .sm-hidden  */ }
    <img src={post.data.poster} alt="">
  </picture>
</div> 
  )}
</Page>
