---
import Installation from '@content/installation.md';
import Intro from '@content/intro.mdx';
import Page from '@layouts/Page.astro';

// Import only the version field from package.json
import { version } from '../../../../package.json';
---
<Page>
  <div class="content-columns">
    <article class="intro column-l surface">
      <Intro />
    </article>
    <article class="surface">
      <Installation />
    </article>
  
    
  <section>
    <h2>Icon examples</h2>
    <cn-icon></cn-icon>
    <cn-icon noun="fox"></cn-icon>
  </section>
  <section>
    <h2>Toolbar Utility Examples</h2>
    
    <h3>Basic Toolbar</h3>
    <div class="toolbar">
      <h4>Page Title</h4>
      <div>
        <button>Edit</button>
        <button>Delete</button>
      </div>
    </div>
    
    <h3>Toolbar in Fieldset</h3>
    <fieldset>
      <legend>Form Section</legend>
      <div class="toolbar">
        <p>Form toolbar with reduced padding</p>
        <button>Save</button>
      </div>
      <input type="text" placeholder="Sample input" />
    </fieldset>
    
    <h3>Multiple Toolbars</h3>
    <div class="toolbar">
      <h4>First Toolbar</h4>
      <span>Action 1</span>
    </div>
    <div class="toolbar">
      <p>Second toolbar with automatic margin handling</p>
      <span>Action 2</span>
    </div>
    <div class="toolbar">
      <p>Last toolbar (no bottom margin)</p>
      <span>Action 3</span>
    </div>
  </section>

  <section>
    <h2>App Bar Examples</h2>
    
    <h3>Default App Bar</h3>
    <cn-app-bar title="Default App Bar">
      <button>Action</button>
    </cn-app-bar>
    
    <h3>App Bar with Icon</h3>
    <cn-app-bar noun="home" title="App with Icon">
      <button>Menu</button>
    </cn-app-bar>
    
    <h3>Sticky App Bar</h3>
    <cn-app-bar mode="sticky" title="Sticky App Bar" short-title="Sticky">
      <button>Options</button>
    </cn-app-bar>
    
    <h3>Modal App Bar</h3>
    <cn-app-bar mode="modal" title="Modal App Bar"></cn-app-bar>
  </section>
  
  
  <section slot="app-footer">
    <p>Version: {version}</p>
  </section>
  </div>  
</Page>

