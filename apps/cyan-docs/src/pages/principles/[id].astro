---
import { getCollection, render } from 'astro:content';
import CollectionTraySection from '@components/base/CollectionTraySection.astro';
import Page from '@layouts/Page.astro';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const posts = await getCollection('principles');
  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { post } = Astro.props;
const { Content } = await render(post);
---
<Page title={post.data.title} tray>
  <div class="content-columns">
    <cn-card
      title={post.data.title}
      noun={post.data.noun}
      class="column-s"
    >
      <p>{post.data.description}</p>

    </cn-card>
     <Content />
  </div>
  <CollectionTraySection slot="tray" collection="principles"/>
</Page>