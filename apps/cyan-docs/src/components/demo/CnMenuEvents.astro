</cn-menu>

<p><small>Open the browser console to see the <code>menu-toggled</code> events.</small></p>

<script is:inline>
  const menuDemo = document.getElementById('menu-events-demo');
  
  menuDemo.addEventListener('menu-toggled', (event) => {
    console.log('cn-menu:menu-toggled', {
      expanded: event.detail.expanded,
      timestamp: new Date().toISOString()
    });
  });
</script>
