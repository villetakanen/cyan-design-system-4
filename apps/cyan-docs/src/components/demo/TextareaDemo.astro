<div class="textarea-demo">
  <label>
    Textarea
    <textarea placeholder="Enter text"></textarea>
  </label>
  <button id="toggle-error-textarea">Toggle Error State</button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.querySelector('#toggle-error-textarea');
    if (button) {
      button.addEventListener('click', () => {
        const textarea = document.querySelector('.textarea-demo textarea');
        if (textarea.hasAttribute('data-error')) {
          textarea.removeAttribute('data-error');
        } else {
          textarea.setAttribute('data-error', 'true');
        }
      });
    }
  });
</script>