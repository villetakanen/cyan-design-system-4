<div class="demo fab-demo">
  <p class="muted">Client-side demo: buttons will be added to the page's FAB tray.</p>
</div>

<script is:inline>
// Client-side demo script: append some FAB buttons to nav#fab-tray
(() => {
  const createFab = (label, href, classes = '') => {
    const noun = document.createElement('cn-icon');
    noun.setAttribute('noun', 'add');

    const l = document.createElement('span');
    l.className = 'sm-hidden';
    l.textContent = label;
     
    const a = document.createElement('a');
    a.className = `fab button ${classes}`;
    a.setAttribute('role', 'button');
    a.href = href || '#';
    a.appendChild(noun);
    a.appendChild(l);
    return a;
  };

  const mount = () => {
    const tray = document.getElementById('fab-tray');
    if (!tray) return;

    // clear existing demo items
    const existing = tray.querySelectorAll('.fab[data-demo]');
    existing.forEach((n) => {
      n.remove();
    });

    const actions = [
      ['New', '#new', 'secondary small'],
      ['A very long name, indeed', '#new', 'small'],
      ['Edit', '#edit', 'secondary'],
      ['CTA', '#delete', 'cta'],
      ['Delete', '#delete'],
    ];

    actions.forEach(([label, href, classes]) => {
      const btn = createFab(label, href, classes);
      btn.setAttribute('data-demo', 'true');
      tray.appendChild(btn);
    });
  };

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', mount);
  } else {
    mount();
  }
})();

</script>
