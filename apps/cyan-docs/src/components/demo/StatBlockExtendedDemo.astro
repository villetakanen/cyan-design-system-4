  <cn-d20-ability-score base="16" label="CON"></cn-d20-ability-score>
  
  <!-- Mental Abilities (INT, WIS, CHA) -->
  <cn-d20-ability-score base="12" label="INT"></cn-d20-ability-score>
  <cn-d20-ability-score base="13" label="WIS"></cn-d20-ability-score>
  <cn-d20-ability-score base="10" label="CHA"></cn-d20-ability-score>
  
  <!-- Secondary Stats -->
  <cn-d20-ability-score base="15" label="AC"></cn-d20-ability-score>
  <cn-d20-ability-score base="11" label="INIT"></cn-d20-ability-score>
  <cn-d20-ability-score base="17" label="SPD"></cn-d20-ability-score>
  
  <!-- Additional Stats -->
  <cn-d20-ability-score base="9" label="HP"></cn-d20-ability-score>
  <cn-d20-ability-score base="14" label="PROF"></cn-d20-ability-score>
  <cn-d20-ability-score base="12" label="PASS"></cn-d20-ability-score>
