---
const uniqueId = `app-bar-demo-${Math.random().toString(36).substring(2, 9)}`;
---
<div id={`${uniqueId}-container`} class="debug">
  <cn-app-bar
    id={uniqueId}
    style="margin-left: 0 !important;"
    title="App Bar, with very very long name"
    noun="fox"
    shorttitle="short title" >
    <cn-share-button></cn-share-button>
  </cn-app-bar>

  <fieldset class="toolbar justify-center flex">
    
  <label>
    <span>Default</span>
    <input type="radio" id={`${uniqueId}-default-bar`} name={`${uniqueId}-bar-type`} value="default" checked/>
  </label>

  <label>
    <span>Modal</span>
    <input type="radio" id={`${uniqueId}-modal-bar`} name={`${uniqueId}-bar-type`} value="modal"/>
  </label>

  </fieldset>

</div>

<script define:vars={{ uniqueId }}>
    const defaultBar = document.getElementById(`${uniqueId}-default-bar`);
    const modalBar = document.getElementById(`${uniqueId}-modal-bar`);
    const appBar = document.getElementById(uniqueId);
    
    defaultBar.addEventListener('change', () => {
        appBar.setAttribute('mode', 'undefined');
    });
    
    modalBar.addEventListener('change', () => {
        appBar.setAttribute('mode', 'modal');
    });
</script>

<style define:vars={{ uniqueId }}>
`#${uniqueId}-container` {
  margin-left: 0 !important;
}
</style>
